<Window x:Class="DataBaser.Dialogs.SearchInTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaser.Dialogs"
        mc:Ignorable="d"
        Title="Поиск в таблице"
        Height="250"
        Width="800"
        Topmost="True"
    >
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Top"    
        >
            <ComboBox
                x:Name="columnSelector"    
                Margin="10"
                Width="275"
            />
            <TextBox
                x:Name="keywordsLabel"
                Margin="10"
                Width="275"    
            />
            <Button
                Margin="10"
                Width="125"
                Content="Поиск"    
                Click="SearchInTableHandler"
            />
        </StackPanel>
    </DockPanel>
</Window>
